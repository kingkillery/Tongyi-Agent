{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence.schema.json",
  "title": "Evidence",
  "type": "object",
  "required": ["id", "claim", "source", "confidence"],
  "properties": {
    "id": {"type": "string"},
    "claim": {"type": "string"},
    "snippet": {"type": "string"},
    "source": {"type": "string", "description": "canonical URL or doc id"},
    "date": {"type": "string"},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1}
  }
}

